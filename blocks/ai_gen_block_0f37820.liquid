{% doc %}
  @prompt
    Create a modern 2-column grid section alternating between image and text blocks to showcase three featured surf brands.
    Each block should display:
    
    One brand image (surfing or product lifestyle photo)
    
    Brand name as a bold heading (e.g., "Pyzel Surfboards", "SharpEye Surfboards", "Rip Curl Collection")
    
    A short tagline or description (one line below the heading)
    
    A black call-to-action button with white text (e.g., “Browse Pyzel Collection”)
    
    Layout details:
    
    First row: text on the left, image on the right.
    
    Second row: image on the left, text on the right.
    
    Third row: text on the left, image on the right.
    
    Background color: light gray (#f2f2f2).
    
    Button background: black (#000), button text: white (#fff).
    
    Font: clean and bold sans-serif.
    
    Padding: generous spacing for a premium feel, like a surf lifestyle brand.
    
    Responsive layout: stack vertically on mobile.
    
    Section purpose: highlight surfboard and apparel brands (Pyzel, SharpEye, Rip Curl) with alternating visual storytelling.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-surf-brands-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-surf-brands-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-surf-brands-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.row_gap }}px;
  }

  .ai-surf-brands-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
  }

  .ai-surf-brands-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-surf-brands-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-surf-brands-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-surf-brands-image-{{ ai_gen_id }}:hover {
    transform: scale(1.05);
  }

  .ai-surf-brands-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-surf-brands-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-surf-brands-brand-name-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.heading_margin }}px;
  }

  .ai-surf-brands-tagline-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.tagline_size }}px;
    line-height: 1.4;
    color: {{ block.settings.tagline_color }};
    margin: 0 0 {{ block.settings.button_margin }}px;
  }

  .ai-surf-brands-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: 600;
    font-size: {{ block.settings.button_font_size }}px;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-surf-brands-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-surf-brands-row-reverse-{{ ai_gen_id }} {
    direction: rtl;
  }

  .ai-surf-brands-row-reverse-{{ ai_gen_id }} > * {
    direction: ltr;
  }

  @media screen and (max-width: 749px) {
    .ai-surf-brands-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-surf-brands-row-reverse-{{ ai_gen_id }} {
      direction: ltr;
    }

    .ai-surf-brands-content-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_content_padding }}px;
      text-align: center;
    }

    .ai-surf-brands-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-surf-brands-brand-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-surf-brands-tagline-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_tagline_size }}px;
    }
  }
{% endstyle %}

<div class="ai-surf-brands-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-surf-brands-container-{{ ai_gen_id }}">
    <div class="ai-surf-brands-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign brand_name_key = 'brand_' | append: i | append: '_name'
          assign brand_tagline_key = 'brand_' | append: i | append: '_tagline'
          assign brand_image_key = 'brand_' | append: i | append: '_image'
          assign brand_button_text_key = 'brand_' | append: i | append: '_button_text'
          assign brand_button_link_key = 'brand_' | append: i | append: '_button_link'

          assign brand_name = block.settings[brand_name_key]
          assign brand_tagline = block.settings[brand_tagline_key]
          assign brand_image = block.settings[brand_image_key]
          assign brand_button_text = block.settings[brand_button_text_key]
          assign brand_button_link = block.settings[brand_button_link_key]

          assign is_reverse = false
          if i == 2
            assign is_reverse = true
          endif
        %}

        {% if brand_name != blank or brand_image != blank %}
          <div class="ai-surf-brands-row-{{ ai_gen_id }} {% if is_reverse %}ai-surf-brands-row-reverse-{{ ai_gen_id }}{% endif %}">
            <div class="ai-surf-brands-content-{{ ai_gen_id }}">
              {% if brand_name != blank %}
                <h2 class="ai-surf-brands-brand-name-{{ ai_gen_id }}">{{ brand_name }}</h2>
              {% endif %}
              
              {% if brand_tagline != blank %}
                <p class="ai-surf-brands-tagline-{{ ai_gen_id }}">{{ brand_tagline }}</p>
              {% endif %}
              
              {% if brand_button_text != blank %}
                <a 
                  href="{{ brand_button_link | default: '#' }}" 
                  class="ai-surf-brands-button-{{ ai_gen_id }}"
                >
                  {{ brand_button_text }}
                </a>
              {% endif %}
            </div>

            <div class="ai-surf-brands-image-wrapper-{{ ai_gen_id }}">
              {% if brand_image %}
                <img
                  src="{{ brand_image | image_url: width: 800 }}"
                  alt="{{ brand_image.alt | escape }}"
                  loading="lazy"
                  width="{{ brand_image.width }}"
                  height="{{ brand_image.height }}"
                  class="ai-surf-brands-image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-surf-brands-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

