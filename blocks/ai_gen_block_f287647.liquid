{% doc %}
  @prompt
    Create a modern 2-column grid section alternating between image and text blocks to showcase three featured surf brands.
    Each block should display:
    
    One brand image (surfing or product lifestyle photo)
    
    Brand name as a bold heading (e.g., "Pyzel Surfboards", "SharpEye Surfboards", "Rip Curl Collection")
    
    A short tagline or description (one line below the heading)
    
    A black call-to-action button with white text (e.g., “Browse Pyzel Collection”)
    
    Layout details:
    
    First row: text on the right, image on the left.
    
    Second row: image on the right, text on the left.
    
    Third row: text on the right, image on the left.
    
    Background color: light gray (#f2f2f2).
    
    Button background: black (#000), button text: white (#fff).
    
    Font: clean and bold sans-serif.
    
    Padding: generous spacing for a premium feel, like a surf lifestyle brand.
    
    Responsive layout: stack vertically on mobile.
    
    Section purpose: highlight surfboard and apparel brands (Pyzel, SharpEye, Rip Curl) with alternating visual storytelling., ubah di row kedua imagenya sebelah kanan
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-surf-brands-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-surf-brands-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-surf-brands-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-surf-brand-item-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
    min-height: 400px;
  }

  .ai-surf-brand-item-{{ ai_gen_id }}:nth-child(2) .ai-surf-brand-content-{{ ai_gen_id }} {
    order: 1;
  }

  .ai-surf-brand-item-{{ ai_gen_id }}:nth-child(2) .ai-surf-brand-image-{{ ai_gen_id }} {
    order: 2;
  }

  .ai-surf-brand-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 400px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-surf-brand-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-surf-brand-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-surf-brand-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-surf-brand-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-surf-brand-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-surf-brand-name-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.brand_name_size }}px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
  }

  .ai-surf-brand-tagline-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.tagline_size }}px;
    line-height: 1.4;
    color: {{ block.settings.tagline_color }};
    margin: 0 0 {{ block.settings.button_spacing }}px;
  }

  .ai-surf-brand-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: 600;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-surf-brand-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-surf-brand-item-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
      min-height: auto;
    }

    .ai-surf-brand-item-{{ ai_gen_id }}:nth-child(2) .ai-surf-brand-content-{{ ai_gen_id }},
    .ai-surf-brand-item-{{ ai_gen_id }}:nth-child(2) .ai-surf-brand-image-{{ ai_gen_id }} {
      order: initial;
    }

    .ai-surf-brand-image-{{ ai_gen_id }} {
      height: 300px;
    }

    .ai-surf-brand-content-{{ ai_gen_id }} {
      text-align: center;
      padding: {{ block.settings.mobile_content_padding }}px;
    }

    .ai-surf-brand-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.brand_name_size | times: 0.8 }}px;
    }

    .ai-surf-brand-tagline-{{ ai_gen_id }} {
      font-size: {{ block.settings.tagline_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-surf-brands-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-surf-brands-container-{{ ai_gen_id }}">
    <div class="ai-surf-brands-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign brand_name_key = 'brand_' | append: i | append: '_name'
          assign brand_tagline_key = 'brand_' | append: i | append: '_tagline'
          assign brand_image_key = 'brand_' | append: i | append: '_image'
          assign brand_button_text_key = 'brand_' | append: i | append: '_button_text'
          assign brand_button_link_key = 'brand_' | append: i | append: '_button_link'

          assign brand_name = block.settings[brand_name_key]
          assign brand_tagline = block.settings[brand_tagline_key]
          assign brand_image = block.settings[brand_image_key]
          assign brand_button_text = block.settings[brand_button_text_key]
          assign brand_button_link = block.settings[brand_button_link_key]
        %}

        <div class="ai-surf-brand-item-{{ ai_gen_id }}">
          <div class="ai-surf-brand-image-{{ ai_gen_id }}">
            {% if brand_image %}
              <img
                src="{{ brand_image | image_url: width: 800 }}"
                alt="{{ brand_image.alt | escape }}"
                loading="lazy"
                width="{{ brand_image.width }}"
                height="{{ brand_image.height }}"
              >
            {% else %}
              <div class="ai-surf-brand-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-surf-brand-empty-state-{{ ai_gen_id }}">
                  Add brand {{ i }} image
                </div>
              </div>
            {% endif %}
          </div>

          <div class="ai-surf-brand-content-{{ ai_gen_id }}">
            {% if brand_name != blank %}
              <h2 class="ai-surf-brand-name-{{ ai_gen_id }}">{{ brand_name }}</h2>
            {% endif %}

            {% if brand_tagline != blank %}
              <p class="ai-surf-brand-tagline-{{ ai_gen_id }}">{{ brand_tagline }}</p>
            {% endif %}

            {% if brand_button_text != blank %}
              <a
                href="{{ brand_button_link | default: '#' }}"
                class="ai-surf-brand-button-{{ ai_gen_id }}"
              >
                {{ brand_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

