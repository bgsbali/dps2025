{% doc %}
  @prompt
    icon and heading text with sub heading on four column
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-columns-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-icon-columns-container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-icon-columns-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  .ai-icon-column-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    display: flex;
    flex-direction: column;
    {% if block.settings.text_alignment == 'center' %}
      align-items: center;
    {% elsif block.settings.text_alignment == 'right' %}
      align-items: flex-end;
    {% else %}
      align-items: flex-start;
    {% endif %}
  }

  .ai-icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: {{ block.settings.icon_spacing }}px;
    flex-shrink: 0;
  }

  .ai-icon-wrapper-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-icon-placeholder-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
    color: #999;
  }

  .ai-column-heading-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  .ai-column-subheading-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 990px) {
    .ai-icon-columns-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-icon-columns-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: 24px;
    }

    .ai-icon-columns-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-icon-columns-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-icon-columns-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-columns-container-{{ ai_gen_id }}">
    <div class="ai-icon-columns-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign icon_key = 'column_' | append: i | append: '_icon'
          assign heading_key = 'column_' | append: i | append: '_heading'
          assign subheading_key = 'column_' | append: i | append: '_subheading'
          
          assign icon = block.settings[icon_key]
          assign heading = block.settings[heading_key]
          assign subheading = block.settings[subheading_key]
        %}
        
        <div class="ai-icon-column-{{ ai_gen_id }}">
          <div class="ai-icon-wrapper-{{ ai_gen_id }}">
            {% if icon != blank %}
              <img
                src="{{ icon | image_url: width: 200 }}"
                alt="{{ heading | escape }}"
                width="{{ block.settings.icon_size | times: 0.6 }}"
                height="{{ block.settings.icon_size | times: 0.6 }}"
                loading="lazy"
              >
            {% else %}
              <div class="ai-icon-placeholder-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                  <line x1="9" y1="9" x2="9.01" y2="9"/>
                  <line x1="15" y1="9" x2="15.01" y2="9"/>
                </svg>
              </div>
            {% endif %}
          </div>
          
          {% if heading != blank %}
            <h3 class="ai-column-heading-{{ ai_gen_id }}">{{ heading }}</h3>
          {% endif %}
          
          {% if subheading != blank %}
            <p class="ai-column-subheading-{{ ai_gen_id }}">{{ subheading }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

