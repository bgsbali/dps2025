{% doc %}
  @prompt
    image full size user src from here https://bgsbali.com/wp-content/uploads/2025/08/bgs_maps-1.webp, kalau bagian imagenya di klik, mengarah ke url ini https://bgsbali.com/store/
    
    backgroundnnya #eeeeee
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clickable-image-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    display: block;
    width: 100%;
  }

  .ai-clickable-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: block;
    width: 100%;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-clickable-image-wrapper-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .ai-clickable-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-clickable-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-clickable-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-clickable-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-clickable-image-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-clickable-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.image_url != blank %}
    <a
      href="{{ block.settings.link_url }}"
      class="ai-clickable-image-wrapper-{{ ai_gen_id }}"
      {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
    >
      <img
        src="{{ block.settings.image_url }}"
        alt="{{ block.settings.alt_text | escape }}"
        loading="lazy"
        class="ai-clickable-image-img-{{ ai_gen_id }}"
      >
    </a>
  {% else %}
    <div class="ai-clickable-image-placeholder-{{ ai_gen_id }}">
      {{ 'image' | placeholder_svg_tag }}
      <div class="ai-clickable-image-empty-state-{{ ai_gen_id }}">
        Add an image URL to get started
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Clickable image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "text",
      "id": "image_url",
      "label": "Image URL",
      "default": "https://bgsbali.com/wp-content/uploads/2025/08/bgs_maps-1.webp"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt text",
      "default": "BGS Bali Map"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "Open in new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#eeeeee"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Container border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Clickable image"
    }
  ]
}
{% endschema %}