{% doc %}
  @prompt
    image full size user src from here https://bgsbali.com/wp-content/uploads/2025/08/bgs_maps-1.webp
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-fullsize-image-{{ ai_gen_id }} {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .ai-fullsize-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-fullsize-image-img-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    object-position: {{ block.settings.image_position }};
    display: block;
  }

  .ai-fullsize-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-fullsize-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-fullsize-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-fullsize-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    pointer-events: none;
  }

  .ai-fullsize-image-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: {{ block.settings.text_color }};
    z-index: 2;
    max-width: 90%;
  }

  .ai-fullsize-image-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-fullsize-image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
  }

  .ai-fullsize-image-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-fullsize-image-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-fullsize-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-fullsize-image-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-fullsize-image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-fullsize-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-fullsize-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image_url != blank %}
      <img
        src="{{ block.settings.image_url }}"
        alt="{{ block.settings.image_alt | escape }}"
        class="ai-fullsize-image-img-{{ ai_gen_id }}"
        loading="lazy"
      >
    {% elsif block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-fullsize-image-img-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-fullsize-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-fullsize-image-empty-state-{{ ai_gen_id }}">
          Add an image or enter an image URL
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-fullsize-image-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.heading != blank or block.settings.text != blank or block.settings.button_text != blank %}
      <div class="ai-fullsize-image-content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-fullsize-image-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-fullsize-image-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-fullsize-image-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Full size image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "text",
      "id": "image_url",
      "label": "Image URL",
      "default": "https://bgsbali.com/wp-content/uploads/2025/08/bgs_maps-1.webp",
      "info": "Enter a direct image URL or use the image picker below"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (alternative)"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "BGS Bali Maps"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "fill",
          "label": "Fill"
        }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "center center",
          "label": "Center"
        },
        {
          "value": "top center",
          "label": "Top"
        },
        {
          "value": "bottom center",
          "label": "Bottom"
        },
        {
          "value": "center left",
          "label": "Left"
        },
        {
          "value": "center right",
          "label": "Right"
        }
      ],
      "default": "center center"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 500
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 150,
      "max": 600,
      "step": 25,
      "unit": "px",
      "label": "Mobile height",
      "default": 300
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": false
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 30
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#1f1f21"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Full size image"
    }
  ]
}
{% endschema %}